<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context=".ReservationsActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <Button
            android:id="@+id/pendingButton"
            android:text="Pending"
            android:onClick="onPendingClick"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="25dp"
            android:enabled="true"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:longClickable="true"
            android:background="@drawable/button_shape"
            />

        <Button
            android:id="@+id/checkedInButton"
            android:text="Checked In"
            android:onClick="onCheckedInClick"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="85dp"
            android:enabled="true"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:longClickable="true"
            android:background="@drawable/button_shape"
            />

        <Button
            android:id="@+id/historicalButton"
            android:text="Historical"
            android:onClick="onHistoricalClick"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="145dp"
            android:enabled="true"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:longClickable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_shape"
            />
    </FrameLayout>
</RelativeLayout>
